[flake8]
# Black compatibility
max-line-length = 100
extend-ignore = E203, W503, W504

# Exclude
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    build,
    dist,
    *.egg-info

# Complexity
max-complexity = 11

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811,E402

# Count
statistics = True
count = True

# Show source
show-source = True
show-pep8 = False
